# API Configuration
NODE_ENV=development
PORT=3001

# Google Sheets Database
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_CREDENTIALS_PATH=./config/google-credentials.json
# Or use base64 encoded credentials for deployment
# GOOGLE_CREDENTIALS=base64_encoded_json_here

# WhatsApp Configuration (wa-automate)
WHATSAPP_SESSION_NAME=ministry_messenger
WHATSAPP_HEADLESS=true
WHATSAPP_USE_CHROME=true

# SMS Provider (Choose one)
SMS_PROVIDER=termii

# Termii (Nigeria)
TERMII_API_KEY=your_termii_api_key
TERMII_SENDER_ID=Ministry

# OR Twilio (Global)
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Security (Optional)
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_here