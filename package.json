{
  "name": "ministry-messenger",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter @ministry/api dev\" \"pnpm --filter @ministry/ui dev\" \"pnpm --filter @ministry/main dev\"",
    "build": "pnpm --filter @ministry/api build && pnpm --filter @ministry/ui build && pnpm --filter @ministry/main build",
    "build:electron": "pnpm build && electron-builder",
    "build:pwa": "pnpm --filter @ministry/ui build && pnpm pwa:generate",
    "build:twa": "pnpm build:pwa && bubblewrap build",
    "pwa:generate": "node scripts/generate-pwa-assets.js",
    "twa:init": "bubblewrap init --manifest https://your-domain.vercel.app/manifest.json",
    "deploy": "vercel --prod"
  },
  "devDependencies": {
    "@bubblewrap/cli": "^1.24.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "vercel": "^50.1.5"
  }
}